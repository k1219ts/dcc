	string $menuItems[] = `optionMenu -q -ill omZelosFurModifier_DirectionGeneratorList`;
	for( $menuItem in $menuItems ) { deleteUI $menuItem; }

	// get the name of this ZelosFurModifier_Direction node.
	string $node[];
	tokenize( $attr, ".", $node );
	string $ZelosFurModifier_DirectionNode = $node[0];

