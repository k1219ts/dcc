}

//////////
// main //
global proc AEZelosFurModifier_DirectionTemplate( string $nodeName )
{
	editorTemplate -beginScrollLayout;

		editorTemplate -beginLayout "Controls" -collapse 0;
			editorTemplate -l "Turn On"                                   -ac "onOff";
			editorTemplate -ccu ZTextBarNew ZTextBarReplace "X-Rotation Value";
			editorTemplate -l "Pitch [pitch]"                             -ac "pitch";
			editorTemplate -as;
			editorTemplate -l "Randomness [rand]"                         -ac "rand0";
			editorTemplate -l "Frequency [freq]"                          -ac "freq0";
			editorTemplate -as;
			editorTemplate -ccu ZelosFurModifier_DirectionSeExpr0New ZelosFurModifier_DirectionSeExpr0Replace "seExpr0Str";
			editorTemplate -ccu ZTextBarNew ZTextBarReplace "Y-Rotation Value";
			editorTemplate -l "Yaw [yaw]"                                 -ac "yaw";
			editorTemplate -as;
			editorTemplate -l "Randomness [rand]"                         -ac "rand1";
			editorTemplate -l "Frequency [freq]"                          -ac "freq1";
			editorTemplate -as;
			editorTemplate -ccu ZelosFurModifier_DirectionSeExpr1New ZelosFurModifier_DirectionSeExpr1Replace "seExpr1Str";
			editorTemplate -ccu ZTextBarNew ZTextBarReplace "Exception Ratio";
			editorTemplate -ccu ZelosFurModifier_DirectionSeExpr2New ZelosFurModifier_DirectionSeExpr2Replace "seExpr2Str";
			editorTemplate -as;
			editorTemplate -ccu ZelosFurModifier_DirectionUpdateNew ZelosFurModifier_DirectionUpdateReplace "update";
		editorTemplate -endLayout;

		editorTemplate -beginLayout "Connected Texture List" -collapse 0;
			editorTemplate -ccu ZelosFurModifier_DirectionTextureListNew ZelosFurModifier_DirectionTextureListReplace "";
		editorTemplate -endLayout;

		editorTemplate -beginLayout "Connected Generator List" -collapse 0;
			editorTemplate -ccu ZelosFurModifier_DirectionGeneratorListNew ZelosFurModifier_DirectionGeneratorListReplace "";
		editorTemplate -endLayout;

		editorTemplate -addExtraControls;

	editorTemplate -endScrollLayout;

	editorTemplate -suppress "filePathNames";
	editorTemplate -suppress "outModifier";
	editorTemplate -suppress "seed0";
	editorTemplate -suppress "seed1";
}

