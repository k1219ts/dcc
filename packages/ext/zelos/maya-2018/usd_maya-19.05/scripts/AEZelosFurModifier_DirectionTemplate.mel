//////////////
// Se.Expr0 // 
global proc ZelosFurModifier_DirectionSeExpr0New( string $attr )
{
	setUITemplate -pst attributeEditorTemplate;
		rowLayout -nc 3;
			text "Pitch Expr.";
			textField -w 200 -ed 0 tfZelosFurModifier_DirectionSeExpr0;
			button -w 40 -l "Edit" -c ("ZelosFurModifier_DirectionSeExpr0Win(\""+$attr+"\")") btnZelosFurModifier_DirectionSeExpr0;
			setParent ..;
	setUITemplate -ppt;

	ZelosFurModifier_DirectionSeExpr0Replace( $attr );
}

global proc ZelosFurModifier_DirectionSeExpr0Replace( string $attr )
{
	textField -e -tx `getAttr $attr` tfZelosFurModifier_DirectionSeExpr0;
	button -e -c ("ZelosFurModifier_DirectionSeExpr0Win(\""+$attr+"\")") btnZelosFurModifier_DirectionSeExpr0;
}

global proc ZelosFurModifier_DirectionSeExpr0Win( string $attr )
{
    if( `window -q -exists ZelosFurModifierWin` )
	{
    	deleteUI ZelosFurModifierWin;
	}

	window -wh 10 10 -resizeToFitChildren true -titleBar true -sizeable false -title "Expression Editor" ZelosFurModifierWin;
		columnLayout;
			scrollField -wordWrap true -w 300 -h 100 -text `getAttr $attr` sfZelosFurModifier_DirectionSeExpr0;
		rowLayout -nc 1;
			rowColumnLayout -nc 1;
				button -w 300 -l "Update" -c ("ZelosFurModifier_DirectionSeExpr0Update(\""+$attr+"\")");
				setParent ..;
			setParent ..;
			rowColumnLayout -nc 2;
				button -w 150 -l "Close"  -c ("deleteUI ZelosFurModifierWin");
				button -w 150 -l "Reset"  -c ("ZelosFurModifier_DirectionSeExpr0Reset(\""+$attr+"\")");
				setParent ..;
			setParent ..;
	showWindow ZelosFurModifierWin;
}

global proc ZelosFurModifier_DirectionSeExpr0Update( string $attr )
{
	string $txt = `scrollField -q -tx sfZelosFurModifier_DirectionSeExpr0`;
	setAttr -type "string" $attr $txt;
	textField -e -tx $txt tfZelosFurModifier_DirectionSeExpr0;
}

global proc ZelosFurModifier_DirectionSeExpr0Reset( string $attr )
{
	string $txt = "pitch + rand*znoise(freq,x,y,z)";
	textField -e -tx $txt tfZelosFurModifier_DirectionSeExpr0;
	scrollField -e -tx $txt sfZelosFurModifier_DirectionSeExpr0;
}

