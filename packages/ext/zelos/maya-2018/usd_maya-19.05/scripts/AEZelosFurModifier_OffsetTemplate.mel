//////////////
// Se.Expr0 // 
global proc ZelosFurModifier_OffsetSeExpr0New( string $attr )
{
	setUITemplate -pst attributeEditorTemplate;
		rowLayout -nc 3;
			text "Offset Expr.";
			textField -w 200 -ed 0 tfZelosFurModifier_OffsetSeExpr0;
			button -w 40 -l "Edit" -c ("ZelosFurModifier_OffsetSeExpr0Win(\""+$attr+"\")") btnZelosFurModifier_OffsetSeExpr0;
			setParent ..;
	setUITemplate -ppt;

	ZelosFurModifier_OffsetSeExpr0Replace( $attr );
}

global proc ZelosFurModifier_OffsetSeExpr0Replace( string $attr )
{
	textField -e -tx `getAttr $attr` tfZelosFurModifier_OffsetSeExpr0;
	button -e -c ("ZelosFurModifier_OffsetSeExpr0Win(\""+$attr+"\")") btnZelosFurModifier_OffsetSeExpr0;
}

global proc ZelosFurModifier_OffsetSeExpr0Win( string $attr )
{
    if( `window -q -exists ZelosFurModifierWin` )
	{
    	deleteUI ZelosFurModifierWin;
	}

	window -wh 10 10 -resizeToFitChildren true -titleBar true -sizeable false -title "Expression Editor" ZelosFurModifierWin;
		columnLayout;
			scrollField -wordWrap true -w 300 -h 100 -text `getAttr $attr` sfZelosFurModifier_OffsetSeExpr0;
		rowLayout -nc 1;
			rowColumnLayout -nc 1;
				button -w 300 -l "Update" -c ("ZelosFurModifier_OffsetSeExpr0Update(\""+$attr+"\")");
				setParent ..;
			setParent ..;
			rowColumnLayout -nc 2;
				button -w 150 -l "Close"  -c ("deleteUI ZelosFurModifierWin");
				button -w 150 -l "Reset"  -c ("ZelosFurModifier_OffsetSeExpr0Reset(\""+$attr+"\")");
				setParent ..;
			setParent ..;
	showWindow ZelosFurModifierWin;
}

global proc ZelosFurModifier_OffsetSeExpr0Update( string $attr )
{
	string $txt = `scrollField -q -tx sfZelosFurModifier_OffsetSeExpr0`;
	setAttr -type "string" $attr $txt;
	textField -e -tx $txt tfZelosFurModifier_OffsetSeExpr0;
}

global proc ZelosFurModifier_OffsetSeExpr0Reset( string $attr )
{
	string $txt = "offset + rand*znoise(freq,x,y,z)";
	textField -e -tx $txt tfZelosFurModifier_OffsetSeExpr0;
	scrollField -e -tx $txt sfZelosFurModifier_OffsetSeExpr0;
}

