/////////////////////
// Load Cache Path //
global proc ZField2DViewerLoadDirNew( string $attr )
{
	setUITemplate -pst attributeEditorTemplate;
		rowLayout -nc 4;
			text "Cache Path";
			textField -ed 1 tfZField2DViewerLoadDir;
			symbolButton -image "navButtonBrowse.xpm"
				-c ( "ZLoadDirectory(\""+$attr+"\",\"tfZField2DViewerLoadDir\")" ) tfZField2DViewerLoadDirBtn;
			setParent ..;
	setUITemplate -ppt;
}

global proc ZField2DViewerLoadReplace( string $attr )
{
	textField -e -tx `getAttr $attr` tfZField2DViewerLoadDir;
	symbolButton -e -c ( "ZLoadDirectory(\""+$attr+"\",\"tfZField2DViewerLoadDir\")" ) tfZField2DViewerLoadDirBtn;
}

//////////
// main //
global proc AEZField2DViewerTemplate( string $nodeName )
{
	editorTemplate -beginScrollLayout;

		editorTemplate -beginLayout "Display" -collapse 0;
			
			editorTemplate -l "Mode" -ac "displayMode";
			editorTemplate -l "Grid" -ac "displayGrid";

			editorTemplate -beginLayout "Level-set" -collapse 0;
				editorTemplate -l "On/Off" 		-ac "lvsOnOff";
				editorTemplate -l "fileName" 	-ac "lvsFileName";

			editorTemplate -beginLayout "Velocity" -collapse 0;
				editorTemplate -l "On/Off" 		-ac "velOnOff";
				editorTemplate -l "fileName" 	-ac "velFileName";
				editorTemplate -l "Line Scale" 	-ac "velLineScale";
				editorTemplate -l "Start Color" -ac "velStartColor";
				editorTemplate -l "End Color" 	-ac "velEndColor";

			editorTemplate -beginLayout "Height" -collapse 0;
				editorTemplate -l "On/Off" 		-ac "hgtOnOff";
				editorTemplate -l "MaxValue" 	-ac "hgtMaxValue";
				editorTemplate -l "fileName" 	-ac "hgtFileName";
				
			editorTemplate -endLayout;
		editorTemplate -endLayout;

		editorTemplate -beginLayout "Cache" -collapse 0;
			editorTemplate -ccu ZField2DViewerLoadDirNew ZField2DViewerLoadReplace "cacheRoot";
			editorTemplate -l "Offset"        -ac "cacheOffset";
		editorTemplate -endLayout;


		editorTemplate -addExtraControls;

	editorTemplate -endScrollLayout;

	editorTemplate -suppress "time";
	editorTemplate -suppress "output";
}

