global proc ZelosFurModifier_ScraggleGeneratorListReplace( string $attr )
{
	// remove the old menu items of the option menu.
	string $menuItems[] = `optionMenu -q -ill omZelosFurModifier_ScraggleGeneratorList`;
	for( $menuItem in $menuItems ) { deleteUI $menuItem; }

	// get the name of this ZelosFurModifier_Scraggle node.
	string $node[];
	tokenize( $attr, ".", $node );
	string $ZelosFurModifier_ScraggleNode = $node[0];

	// Get the connected nodes.
	string $connectedPlg[] = `listAttr -multi ( $ZelosFurModifier_ScraggleNode + ".outModifier" )`;
	int $numConnections = size($connectedPlg);

	// Add the connected node names to the option menu.
	int $i=0;
	for( ; $i<$numConnections; $i++ )
	{
		if( !`connectionInfo -is ( $ZelosFurModifier_ScraggleNode + "." + $connectedPlg[$i] )` )
		{
			continue;
		}

		string $nodeAttr[] = `connectionInfo -dfs ( $ZelosFurModifier_ScraggleNode + "." + $connectedPlg[$i] )`;
		tokenize( $nodeAttr[0], ".", $node );
		menuItem -label $node[0] -p omZelosFurModifier_ScraggleGeneratorList;
	}
}

//////////
// main //
global proc AEZelosFurModifier_ScraggleTemplate( string $nodeName )
{
	editorTemplate -beginScrollLayout;

		editorTemplate -beginLayout "Controls" -collapse 0;
			editorTemplate -l "Turn On"                                   -ac "onOff";
			editorTemplate -ccu ZTextBarNew ZTextBarReplace "Scraggle";
			editorTemplate -l "Scraggle [scraggle]"                       -ac "scraggle";
			editorTemplate -as;
			editorTemplate -l "Randomness [rand]"                         -ac "rand0";
			editorTemplate -l "Frequency [freq]"                          -ac "freq0";
			editorTemplate -as;
			editorTemplate -ccu ZelosFurModifier_ScraggleSeExpr0New ZelosFurModifier_ScraggleSeExpr0Replace "seExpr0Str";
			editorTemplate -ccu ZTextBarNew ZTextBarReplace "Tip Width";
			editorTemplate -l "tipWidth [tWidth]"                         -ac "tipWidth";
			editorTemplate -as;
			editorTemplate -l "Randomness [rand]"                         -ac "rand1";
			editorTemplate -l "Frequency [freq]"                          -ac "freq1";
			editorTemplate -as;
			editorTemplate -ccu ZelosFurModifier_ScraggleSeExpr1New ZelosFurModifier_ScraggleSeExpr1Replace "seExpr1Str";
			editorTemplate -ccu ZTextBarNew ZTextBarReplace "Root Width";
			editorTemplate -l "rootWidth [rWidth]"                        -ac "rootWidth";
			editorTemplate -as;
			editorTemplate -l "Randomness [rand]"                         -ac "rand2";
			editorTemplate -l "Frequency [freq]"                          -ac "freq2";
			editorTemplate -as;
			editorTemplate -ccu ZelosFurModifier_ScraggleSeExpr2New ZelosFurModifier_ScraggleSeExpr2Replace "seExpr2Str";
			editorTemplate -ccu ZTextBarNew ZTextBarReplace "Exception Ratio";
			editorTemplate -ccu ZelosFurModifier_ScraggleSeExpr3New ZelosFurModifier_ScraggleSeExpr3Replace "seExpr3Str";
			editorTemplate -ccu ZTextBarNew ZTextBarReplace "Smoothness";
			editorTemplate -l "Tip Smoothness"                            -ac "tipSmoothness";
			editorTemplate -l "Root Smoothness"                           -ac "rootSmoothness";
			editorTemplate -as;
			editorTemplate -ccu ZelosFurModifier_ScraggleUpdateNew ZelosFurModifier_ScraggleUpdateReplace "update";
		editorTemplate -endLayout;

		editorTemplate -beginLayout "Connected Texture List" -collapse 0;
			editorTemplate -ccu ZelosFurModifier_ScraggleTextureListNew ZelosFurModifier_ScraggleTextureListReplace "";
		editorTemplate -endLayout;

		editorTemplate -beginLayout "Connected Generator List" -collapse 0;
			editorTemplate -ccu ZelosFurModifier_ScraggleGeneratorListNew ZelosFurModifier_ScraggleGeneratorListReplace "";
		editorTemplate -endLayout;

		editorTemplate -addExtraControls;

	editorTemplate -endScrollLayout;

	editorTemplate -suppress "filePathNames";
	editorTemplate -suppress "outModifier";
	editorTemplate -suppress "seed0";
	editorTemplate -suppress "seed1";
	editorTemplate -suppress "seed2";
}

