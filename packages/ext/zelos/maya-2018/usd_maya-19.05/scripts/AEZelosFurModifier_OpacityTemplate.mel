global proc ZelosFurModifier_OpacityGeneratorListReplace( string $attr )
{
	// remove the old menu items of the option menu.
	string $menuItems[] = `optionMenu -q -ill omZelosFurModifier_OpacityGeneratorList`;
	for( $menuItem in $menuItems ) { deleteUI $menuItem; }

	// get the name of this ZelosFurModifier_Opacity node.
	string $node[];
	tokenize( $attr, ".", $node );
	string $ZelosFurModifier_OpacityNode = $node[0];

	// Get the connected nodes.
	string $connectedPlg[] = `listAttr -multi ( $ZelosFurModifier_OpacityNode + ".outModifier" )`;
	int $numConnections = size($connectedPlg);

	// Add the connected node names to the option menu.
	int $i=0;
	for( ; $i<$numConnections; $i++ )
	{
		if( !`connectionInfo -is ( $ZelosFurModifier_OpacityNode + "." + $connectedPlg[$i] )` )
		{
			continue;
		}

		string $nodeAttr[] = `connectionInfo -dfs ( $ZelosFurModifier_OpacityNode + "." + $connectedPlg[$i] )`;
		tokenize( $nodeAttr[0], ".", $node );
		menuItem -label $node[0] -p omZelosFurModifier_OpacityGeneratorList;
	}
}

//////////
// main //
global proc AEZelosFurModifier_OpacityTemplate( string $nodeName )
{
	editorTemplate -beginScrollLayout;

		editorTemplate -beginLayout "Controls" -collapse 0;
			editorTemplate -l "Turn On"                                   -ac "onOff";
			editorTemplate -ccu ZTextBarNew ZTextBarReplace "Tip Opacity Value";
			editorTemplate -l "Tip Opacity [tOpacity]"                    -ac "tipOpacity";
			editorTemplate -as;
			editorTemplate -l "Randomness [rand]"                         -ac "rand0";
			editorTemplate -l "Frequency [freq]"                          -ac "freq0";
			editorTemplate -as;
			editorTemplate -ccu ZelosFurModifier_OpacitySeExpr0New ZelosFurModifier_OpacitySeExpr0Replace "seExpr0Str";
			editorTemplate -ccu ZTextBarNew ZTextBarReplace "Root Opacity Value";
			editorTemplate -l "Root Opacity [rOpacity]"                    -ac "rootOpacity";
			editorTemplate -as;
			editorTemplate -l "Randomness [rand]"                          -ac "rand1";
			editorTemplate -l "Frequency [freq]"                           -ac "freq1";
			editorTemplate -as;
			editorTemplate -ccu ZelosFurModifier_OpacitySeExpr1New ZelosFurModifier_OpacitySeExpr1Replace "seExpr1Str";
			editorTemplate -as;
			editorTemplate -ccu ZelosFurModifier_OpacityUpdateNew ZelosFurModifier_OpacityUpdateReplace "update";
		editorTemplate -endLayout;

		editorTemplate -beginLayout "Connected Texture List" -collapse 0;
			editorTemplate -ccu ZelosFurModifier_OpacityTextureListNew ZelosFurModifier_OpacityTextureListReplace "";
		editorTemplate -endLayout;

		editorTemplate -beginLayout "Connected Generator List" -collapse 0;
			editorTemplate -ccu ZelosFurModifier_OpacityGeneratorListNew ZelosFurModifier_OpacityGeneratorListReplace "";
		editorTemplate -endLayout;

		editorTemplate -addExtraControls;

	editorTemplate -endScrollLayout;

	editorTemplate -suppress "filePathNames";
	editorTemplate -suppress "outModifier";
	editorTemplate -suppress "seed0";
	editorTemplate -suppress "seed1";
}

