////////////////////////
// the 1st expression //
global proc ZN_Deform_OffsetExpr1New( string $attr )
{
	setUITemplate -pst attributeEditorTemplate;
	{
		rowLayout -nc 3;
		{
			text "Offset Expr.";
			textField -w 200 -ed 0 tfZN_Deform_OffsetExpr1;
			button -w 40 -l "Edit" -c ("ZN_Deform_OffsetExpr1Win(\""+$attr+"\")") btnZN_Deform_OffsetExpr1;
		}
		setParent ..;
	}
	setUITemplate -ppt;

	ZN_Deform_OffsetExpr1Replace( $attr );
}

global proc ZN_Deform_OffsetExpr1Replace( string $attr )
{
	textField -e -tx `getAttr $attr` tfZN_Deform_OffsetExpr1;
	button -e -c ("ZN_Deform_OffsetExpr1Win(\""+$attr+"\")") btnZN_Deform_OffsetExpr1;
}

global proc ZN_Deform_OffsetExpr1Win( string $attr )
{
    if( `window -q -exists ZNDeformerWin` )
	{
    	deleteUI ZNDeformerWin;
	}

	window -wh 10 10 -resizeToFitChildren true -titleBar true -sizeable false -title "Expression Editor" ZNDeformerWin;
	{
		columnLayout;
		{
			scrollField -wordWrap true -w 300 -h 100 -text `getAttr $attr` sfZN_Deform_OffsetExpr1;

			rowLayout -nc 1;
			{
				rowColumnLayout -nc 1;
				{
					button -w 300 -l "Update" -c ("ZN_Deform_OffsetExpr1Update(\""+$attr+"\")");
				}
				setParent ..;
			}
			setParent ..;

			rowColumnLayout -nc 2;
			{
				button -w 150 -l "Close"  -c ("deleteUI ZNDeformerWin");
				button -w 150 -l "Reset"  -c ("ZN_Deform_OffsetExpr1Reset(\""+$attr+"\")");
			}
			setParent ..;
		}
		setParent ..;
	}
	showWindow ZNDeformerWin;
}

global proc ZN_Deform_OffsetExpr1Update( string $attr )
{
	string $txt = `scrollField -q -tx sfZN_Deform_OffsetExpr1`;
	setAttr -type "string" $attr $txt;
	textField -e -tx $txt tfZN_Deform_OffsetExpr1;
}

global proc ZN_Deform_OffsetExpr1Reset( string $attr )
{
	string $txt = "offset + rand*znoise(freq,x,y,z)";
	textField -e -tx $txt tfZN_Deform_OffsetExpr1;
	scrollField -e -tx $txt sfZN_Deform_OffsetExpr1;
}

