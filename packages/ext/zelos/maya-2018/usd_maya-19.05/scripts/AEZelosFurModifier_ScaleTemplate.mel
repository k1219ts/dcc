//////////////
// Se.Expr0 // 
global proc ZelosFurModifier_ScaleSeExpr0New( string $attr )
{
	setUITemplate -pst attributeEditorTemplate;
		rowLayout -nc 3;
			text "Scale Expr.";
			textField -w 200 -ed 0 tfZelosFurModifier_ScaleSeExpr0;
			button -w 40 -l "Edit" -c ("ZelosFurModifier_ScaleSeExpr0Win(\""+$attr+"\")") btnZelosFurModifier_ScaleSeExpr0;
			setParent ..;
	setUITemplate -ppt;

	ZelosFurModifier_ScaleSeExpr0Replace( $attr );
}

global proc ZelosFurModifier_ScaleSeExpr0Replace( string $attr )
{
	textField -e -tx `getAttr $attr` tfZelosFurModifier_ScaleSeExpr0;
	button -e -c ("ZelosFurModifier_ScaleSeExpr0Win(\""+$attr+"\")") btnZelosFurModifier_ScaleSeExpr0;
}

global proc ZelosFurModifier_ScaleSeExpr0Win( string $attr )
{
    if( `window -q -exists ZelosFurModifierWin` )
	{
    	deleteUI ZelosFurModifierWin;
	}

	window -wh 10 10 -resizeToFitChildren true -titleBar true -sizeable false -title "Expression Editor" ZelosFurModifierWin;
		columnLayout;
			scrollField -wordWrap true -w 300 -h 100 -text `getAttr $attr` sfZelosFurModifier_ScaleSeExpr0;
		rowLayout -nc 1;
			rowColumnLayout -nc 1;
				button -w 300 -l "Update" -c ("ZelosFurModifier_ScaleSeExpr0Update(\""+$attr+"\")");
				setParent ..;
			setParent ..;
			rowColumnLayout -nc 2;
				button -w 150 -l "Close"  -c ("deleteUI ZelosFurModifierWin");
				button -w 150 -l "Reset"  -c ("ZelosFurModifier_ScaleSeExpr0Reset(\""+$attr+"\")");
				setParent ..;
			setParent ..;
	showWindow ZelosFurModifierWin;
}

global proc ZelosFurModifier_ScaleSeExpr0Update( string $attr )
{
	string $txt = `scrollField -q -tx sfZelosFurModifier_ScaleSeExpr0`;
	setAttr -type "string" $attr $txt;
	textField -e -tx $txt tfZelosFurModifier_ScaleSeExpr0;
}

global proc ZelosFurModifier_ScaleSeExpr0Reset( string $attr )
{
	string $txt = "scale + rand*znoise(freq,x,y,z)";
	textField -e -tx $txt tfZelosFurModifier_ScaleSeExpr0;
	scrollField -e -tx $txt sfZelosFurModifier_ScaleSeExpr0;
}

