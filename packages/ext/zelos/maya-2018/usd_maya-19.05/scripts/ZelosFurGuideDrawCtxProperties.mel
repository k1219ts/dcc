global proc ZelosFurGuideDrawCtxProperties()
{
    if( !`pluginInfo -q -loaded "ZelosFurForMaya"` )
	{
		error( "You must load the ZelosFurForMaya plug-in first!" );
		return;
	}

	if( `control -exists ZelosFurGuideDrawCtxLayout` )
	{
		return;
	}

	string $parent = `toolPropertyWindow -q -location`;
	setParent $parent;

	setUITemplate -pushTemplate DefaultTemplate;
	{
		columnLayout ZelosFurGuideDrawCtxLayout;
		{
			frameLayout -collapsable true -collapse false -l "ZelosFurGuideDrawCtxTool" ZelosFurGuideDrawCtxFrame;
			{
				columnLayout ZelosFurGuideDrawCtxOptions;
				{
					$parent = `setParent -query`;
					separator -style "none";
					floatSliderGrp -l "Distance" -f true -min 0.1 -max 100 -fmn 0.1 -fmx 100 -v 0.2 -s 0.1 -fs 0.1 -ss 0.1
						-cc "ZelosFurGuideDrawCtxDistance(`floatSliderGrp -q -v ZelosFurGuideDrawCtxDistance`)" ZelosFurGuideDrawCtxDistance;
				}
				setParent ..;
			}
			setParent ..;
		}
		setParent ..;
	}
	setUITemplate -popTemplate;
}

global proc ZelosFurGuideDrawCtxDistance( float $val )
{
	ZelosFurGuideDrawCtx -e -distance $val `currentCtx`;
}

