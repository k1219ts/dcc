//////////
// main //
global proc AEZelosFurModifier_WidthTemplate( string $nodeName )
{
	editorTemplate -beginScrollLayout;

		editorTemplate -beginLayout "Controls" -collapse 0;
			editorTemplate -l "Turn On"                                   -ac "onOff";
			editorTemplate -ccu ZTextBarNew ZTextBarReplace "Tip Width Value";
			editorTemplate -l "Tip Width [tWidth]"                        -ac "tipWidth";
			editorTemplate -as;
			editorTemplate -l "Randomness [rand]"                         -ac "rand0";
			editorTemplate -l "Frequency [freq]"                          -ac "freq0";
			editorTemplate -as;
			editorTemplate -ccu ZelosFurModifier_WidthSeExpr0New ZelosFurModifier_WidthSeExpr0Replace "seExpr0Str";
			editorTemplate -ccu ZTextBarNew ZTextBarReplace "Root Width Value";
			editorTemplate -l "Root Width [rWidth]"                        -ac "rootWidth";
			editorTemplate -as;
			editorTemplate -l "Randomness [rand]"                          -ac "rand1";
			editorTemplate -l "Frequency [freq]"                           -ac "freq1";
			editorTemplate -as;
			editorTemplate -ccu ZelosFurModifier_WidthSeExpr1New ZelosFurModifier_WidthSeExpr1Replace "seExpr1Str";
			editorTemplate -as;
			editorTemplate -ccu ZelosFurModifier_WidthUpdateNew ZelosFurModifier_WidthUpdateReplace "update";
		editorTemplate -endLayout;

		editorTemplate -beginLayout "Connected Texture List" -collapse 0;
			editorTemplate -ccu ZelosFurModifier_WidthTextureListNew ZelosFurModifier_WidthTextureListReplace "";
		editorTemplate -endLayout;

		editorTemplate -beginLayout "Connected Generator List" -collapse 0;
			editorTemplate -ccu ZelosFurModifier_WidthGeneratorListNew ZelosFurModifier_WidthGeneratorListReplace "";
		editorTemplate -endLayout;

		editorTemplate -addExtraControls;

	editorTemplate -endScrollLayout;

	editorTemplate -suppress "filePathNames";
	editorTemplate -suppress "outModifier";
	editorTemplate -suppress "seed0";
	editorTemplate -suppress "seed1";
}

